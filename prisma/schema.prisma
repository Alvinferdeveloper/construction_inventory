// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Rol {
  id          Int       @id @default(autoincrement())
  nombre      String    @db.VarChar(100)
  descripcion String?
  users       User[]    
  
  @@map("roles")
}

model User {
  id              String      @id @default(cuid())
  name            String      @db.VarChar(150)
  email           String      @unique(map: "user_email_unique")  // ✅ Agregar map único
  password        String?     @db.VarChar(255)
  phone           String?     @db.VarChar(20)
  direction       String?     @db.Text
  identification  String?     @db.VarChar(20)
  emailVerified   Boolean     @default(false)
  image           String?     @db.Text
  estado          Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  rolId           Int
  rol             Rol         @relation(fields: [rolId], references: [id])
  bodegas         Bodega[]    @relation("ResponsableBodega")
  movimientos     Movimiento[]
  requisas        Requisa[]   @relation("SolicitanteRequisa")
  sessions        Session[]
  accounts        Account[]

  @@unique([email], map: "user_email_composite_unique")  // ✅ Map único para composite
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())  // Agregado @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?  @db.VarChar(45)       // Cambiado a VarChar para IP
  userAgent String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")  // Corregido: plural
}

model Account {
  id                    String    @id @default(cuid())  // Agregado @default(cuid())
  accountId             String    @db.VarChar(255)      // Cambiado a VarChar
  providerId            String    @db.VarChar(255)      // Cambiado a VarChar
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?   @db.Text
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@unique([providerId, accountId])  // Agregado: unique constraint importante
  @@map("accounts")  // Corregido: plural
}

model Verification {
  id         String   @id @default(cuid())  // Agregado @default(cuid())
  identifier String   @db.VarChar(255)      // Cambiado a VarChar
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")  // Corregido: plural
}

model Bodega {
  id             Int          @id @default(autoincrement())
  nombre         String       @db.VarChar(100)
  ubicacion      String       @db.VarChar(200)
  responsableId  String       // CORREGIDO: Cambiado a String para relación con User
  responsable    User         @relation("ResponsableBodega", fields: [responsableId], references: [id]) // CORREGIDO: Relación con User
  inventario     Inventario[]
  
  @@map("bodegas")
}

model Categoria {
  id      Int        @id @default(autoincrement())
  nombre  String     @db.VarChar(100)
  materiales Material[]
  
  @@map("categorias")
}

model Material {
  id            Int          @id @default(autoincrement())
  nombre        String       @db.VarChar(100)
  unidad_medida String       @db.VarChar(50)
  categoriaId   Int
  categoria     Categoria    @relation(fields: [categoriaId], references: [id])
  inventario    Inventario[]
  detalleRequisa DetalleRequisa[]
  
  @@map("materiales")
}

model Inventario {
  id          Int          @id @default(autoincrement())
  bodegaId    Int
  materialId  Int
  stock_actual Int         @default(0)
  bodega      Bodega       @relation(fields: [bodegaId], references: [id])
  material    Material     @relation(fields: [materialId], references: [id])
  movimientos Movimiento[]
  
  @@unique([bodegaId, materialId])
  @@map("inventario")
}

model Movimiento {
  id            Int        @id @default(autoincrement())
  inventarioId  Int
  tipo          MovimientoTipo  // CORREGIDO: Usar enum en lugar de string
  cantidad      Int
  fecha         DateTime   @default(now())
  usuarioId     String     // CORREGIDO: Cambiado a String para relación con User
  observaciones String?
  inventario    Inventario @relation(fields: [inventarioId], references: [id])
  usuario       User       @relation(fields: [usuarioId], references: [id]) // CORREGIDO: Relación con User
  
  @@map("movimientos")
}

model Requisa {
  id             Int              @id @default(autoincrement())
  proyecto       String           @db.VarChar(200)
  solicitanteId  String           // CORREGIDO: Cambiado a String para relación con User
  fecha          DateTime         @default(now())
  estado         RequisaEstado    @default(pendiente) // CORREGIDO: Usar enum
  destino        String?
  solicitante    User             @relation("SolicitanteRequisa", fields: [solicitanteId], references: [id]) // CORREGIDO: Relación con User
  detalles       DetalleRequisa[]
  
  @@map("requisas")
}

model DetalleRequisa {
  id          Int       @id @default(autoincrement())
  requisaId   Int
  materialId  Int
  cantidad    Int
  descripcion String?
  requisa     Requisa   @relation(fields: [requisaId], references: [id])
  material    Material  @relation(fields: [materialId], references: [id])
  
  @@map("detalle_requisas")
}

// ENUMS DEFINIDOS
enum MovimientoTipo {
  entrada
  salida
}

enum RequisaEstado {
  pendiente
  aprobada
  rechazada
  completada
}