// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Rol {
  id          Int      @id @default(autoincrement())
  nombre      String   @db.VarChar(100)
  descripcion String?
  users       User[]
  deletedAt   DateTime?

  @@map("roles")
}

model User {
  id             String    @id @default(cuid())
  name           String    @db.VarChar(150)
  email          String    @unique(map: "user_email_unique")
  password       String?   @db.VarChar(255)
  phone          String?   @db.VarChar(20)
  direction      String?   @db.Text
  identification String?   @db.VarChar(20)
  emailVerified  Boolean   @default(false)
  image          String?   @db.Text
  estado         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  isActive       Boolean   @default(true)
  deletedAt      DateTime?

  rolId       Int
  rol         Rol          @relation(fields: [rolId], references: [id])
  bodegas     Bodega[]     @relation("ResponsableBodega")
  movimientos Movimiento[]
  requisas    Requisa[]    @relation("SolicitanteRequisa")
  sessions    Session[]
  accounts    Account[]

  @@unique([email], map: "user_email_composite_unique")
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?  @db.VarChar(45)
  userAgent String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    @db.VarChar(255)
  providerId            String    @db.VarChar(255)
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?   @db.Text
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String   @db.VarChar(255)
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")
}

model Bodega {
  id            Int          @id @default(autoincrement())
  nombre        String       @db.VarChar(100)
  ubicacion     String       @db.VarChar(200)
  responsableId String
  responsable   User         @relation("ResponsableBodega", fields: [responsableId], references: [id])
  inventario    Inventario[]
  isActive      Boolean      @default(true)
  deletedAt     DateTime?

  @@map("bodegas")
}

model Categoria {
  id         Int        @id @default(autoincrement())
  nombre     String     @db.VarChar(100)
  materiales Material[]
  deletedAt  DateTime?

  @@map("categorias")
}

model Material {
  id             Int              @id @default(autoincrement())
  nombre         String           @db.VarChar(100)
  unidad_medida  String           @db.VarChar(50)
  categoriaId    Int
  categoria      Categoria        @relation(fields: [categoriaId], references: [id])
  inventario     Inventario[]
  detalleRequisa DetalleRequisa[]
  deletedAt      DateTime?

  @@map("materiales")
}

model Inventario {
  id           Int          @id @default(autoincrement())
  bodegaId     Int
  materialId   Int
  stock_actual Int          @default(0)
  bodega       Bodega       @relation(fields: [bodegaId], references: [id])
  material     Material     @relation(fields: [materialId], references: [id])
  movimientos  Movimiento[]
  deletedAt    DateTime?

  @@unique([bodegaId, materialId])
  @@map("inventario")
}

model Movimiento {
  id            Int            @id @default(autoincrement())
  inventarioId  Int
  tipo          MovimientoTipo
  cantidad      Int
  fecha         DateTime       @default(now())
  usuarioId     String
  observaciones String?
  inventario    Inventario     @relation(fields: [inventarioId], references: [id])
  usuario       User           @relation(fields: [usuarioId], references: [id])
  deletedAt     DateTime?

  @@map("movimientos")
}

model Requisa {
  id            Int              @id @default(autoincrement())
  proyecto      String           @db.VarChar(200)
  solicitanteId String
  fecha         DateTime         @default(now())
  estado        RequisaEstado    @default(pendiente)
  destino       String?
  solicitante   User             @relation("SolicitanteRequisa", fields: [solicitanteId], references: [id])
  detalles      DetalleRequisa[]
  deletedAt     DateTime?

  @@map("requisas")
}

model DetalleRequisa {
  id          Int      @id @default(autoincrement())
  requisaId   Int
  materialId  Int
  cantidad    Int
  descripcion String?
  requisa     Requisa  @relation(fields: [requisaId], references: [id])
  material    Material @relation(fields: [materialId], references: [id])
  deletedAt   DateTime?

  @@map("detalle_requisas")
}

// ENUMS DEFINIDOS
enum MovimientoTipo {
  entrada
  salida
}

enum RequisaEstado {
  pendiente
  aprobada
  rechazada
  completada
}
